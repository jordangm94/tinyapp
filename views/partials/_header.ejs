<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <!-- The next line designates the form for login on the header of each page or logout if user already logged in. -->
        <% if(!username){ %>
        
            <form method="POST" action="/login">
              <input type="text"
              name="username"
              placeholder="Type username here!"
              />
              <button type="submit" class="btn btn-primary" >Login</button>
            </form>
        <% } else{ %>  
          <h5>Logged in as: <%= username %> </h5>
            <form method="POST" action="/logout">
              <button class="btn-default">logout</button>
       <% } %>
      </div>
    </div>
  </nav>
</header>